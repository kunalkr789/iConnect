<div class="sidebar-container">
    <h4>Friend requests:</h4>
    <%if(locals.user.request){%>
      <ul >
      <% for (r of locals.user.request){%>
        <%if(locals.user.id!=r._id){%>
        <li>
          <% if(r.avatar) {%>
            <img class='img' src="<%=r.avatar%>" style="height: 30; width: 30;"> <span class='title'><%=r.name%></span>
          <% }else{%>
            <img src="https://cdn2.iconfinder.com/data/icons/circle-icons-1/64/profle-512.png" class='img' height="30" width="30">
          <%}%>
          <br>
         <a href='/freind/add?id=<%=r._id%>&name=<%=user.id%>'><button style=" height: 30px;
          width:70px;
          background-color: rgb(132, 160, 132);
          color:white;
          font-weight: bolder;
          margin-left:3%;border: 2px solid green;">Accept</button></a> <a href="/users/removefriend/?id=<%=r.id%>&type=<%=locals.user.id %>"><button style=" display: inline-block;
          margin-left:10%;
          color:white;
          background-color: rgb(7, 0, 0);
          height:30px;
          width:60px;
          font-weight: bolder;
          margin-top:2%;
          border:2px solid rgb(8, 8, 8);
          ">Reject</button></a>
        </li>
      <%}%>
      <%}%>
     </ul>
     <%} else {%>
      <h5>(No new friend requests.)</h5>
      <%} %>
  </div>