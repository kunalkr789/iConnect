<script src="/assets/js/post.js"></script>
<link rel="stylesheet" href="/css/home.css">

<div id="home-container">
<% if(!locals.user) {%>
    <div id="welcome-text">
    <p>Welcome to iConnect. Please 
        <a href="/users/sign-in">Sign In</a>
        or
        <a href="/users/sign-up">Sign Up to continue.
    </p>
    </div>
    <% }
    else { %>
        
            <section id="user-details">
                <% if(locals.user){ %>
                    <p>
                        <% if(user.avatar) {%>
                            <img src="<%=user.avatar%>" class='img' height="100" width="100">
                        <% }else{%>
                            <img src="https://cdn2.iconfinder.com/data/icons/circle-icons-1/64/profle-512.png" class='img' height="100" width="100">
                        <%}%>
                        <p><%= user.name %></p>
                        <p><%= user.email %></p>
                        <a href="/users/profile/<%= user.id %>" >Profile</a>
                    </p>
                <% } %>
            </section>
            <section id="feed-posts">
                <h4>Posts</h4>
                <% if(locals.user){ %>
                <form action="/posts/create" id="new-post-form" enctype="multipart/form-data" method="POST">
                    <textarea name="content" cols="60" rows="6" placeholder="Type Here..." required></textarea>
                    <div class="file-upload" tabindex="1">
                        <label for="postimage"><i class="fa fa-image"></i> <span>Image</span></label>
                        <input type="file" name="postimage" id="postimage" onchange="checkUpload(event, 'uploaded-item-stack')">
                    </div>
                    <input type="submit" value="Post">
                </form>
                <% } %>           
                <div id="posts-list-container">
                    <ul>
                        <% for(post of posts){ %>                            
                            <%- include('_post') -%>
                            <br> 
                        <%} %>
                        
                    </ul>
                </div>
            </section>                       
            <section id="user-friends">
                <%-include('_sidebar')-%>
                <%-include('_friend_bar')-%>
                <h4>Users:</h4>
                <% for(u of all_users){%>
                    <p>
                        <a href="/users/profile/<%= u.id %>"><%= u.name %></a>
                    </p>
                <% } %>
            </section>
        

<% } %>
</div>
<script src="/assets/js/home_posts.js"></script>